<div class="container" ng-controller="mainController">
  <div class="row">
    <div class="col-sm-2">
      <ul>
        <li ng-repeat="option in options">
          <label>
            <input type="radio" name="keyword" value="{{ option }}" ng-click="show_tweets(option)" ng-checked="option == keyword">
            {{ option }}
          </label>
        </li>
      </ul>
    </div>
    <div class="col-sm-10">
      <p class="lead" ng-if="keyword">
         Tweets for: <mark><strong>{{ keyword }}</strong></mark>
      </p>
      <ul>
        <li ng-repeat="tweet in tweets">
          <blockquote>
            <p>{{ tweet.text }}</p>
            <footer>
              <a href="http://twitter.com/{{tweet.username}}">
                <span>{{ tweet.name }}</span>
              </a>
            </footer>
          </blockquote>
        </li>
        <li ng-if="tweets.length == 0">
          <p class="lead text-info bg-info">There are currently no tweets to show</p>
        </li>
      </ul>
    </div>
  </div>
</div>
